{% block grid_start %}grid_start{% endblock %}

{% block grid_head %}grid_head{% endblock %}

{% block grid_filters %}grid_filters{% endblock %}

{% block grid_body %}grid_body{% endblock %}

{% block grid_end %}grid_end{% endblock %}

{% block grid_pagination %}grid_pagination{% endblock %}

{% block attributes -%}

    {%- for attrname, attrvalue in attr -%}
        {{- " " -}}
        {%- if attrvalue is same as(true) -%}
            {{- attrname }}="{{ attrname }}"
        {%- elseif attrvalue is not same as(false) -%}
            {{- attrname }}="{{ attrvalue }}"
        {%- endif -%}
    {%- endfor -%}
{%- endblock attributes -%}

{% block action_button %}{{ action }}{% endblock %}

{% block action_button_styles %}
    color:#212529;font-size:0.9rem;font-weight:300;background:none;border:0;cursor:pointer;padding:0
{% endblock %}

{% block grid_img %}
    <img src="{{ asset(src) }}" height="{{ height }}" width="{{ width }}" alt="{{ alt }}"/>
{% endblock %}

{% block grid_filter %}
    {% set attr = options|merge({class: (options.class|default('') ~ ' data_grid_filter')|trim}) %}
    {{ block(block_name) }}
{% endblock %}

{% block text_filter %}
    <input type="text" {{ block('attributes') }} name="{{ attribute }}" value="{{ value }}">
{% endblock %}

{% block boolean_filter %}
    {{ block('choice_filter') }}
{% endblock %}

{% block choice_filter %}select>{% for val,label in choices %}option>{{ val }}:{{ label }} {% endfor %}{% endblock %}

{% block date_filter %}
    <input type="date" {{ block('attributes') }} name="{{ attribute }}" value="{{ value }}"/>
{% endblock %}
